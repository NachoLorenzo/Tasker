<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NuevoProyectoFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/image_proyecto"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/profile_photo"/>

        <TextView
            android:id="@+id/label_nombre_proyecto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre del proyecto"
            android:layout_below="@id/image_proyecto"/>
        <EditText
            android:id="@+id/edit_text_nombre_proyecto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/label_nombre_proyecto" />
        <TextView
            android:id="@+id/label_añadir_usuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Añadir usuarios:"
            android:layout_below="@+id/edit_text_nombre_proyecto"/>
        <Spinner
            android:id="@+id/spinnerUsuarios"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/label_añadir_usuario"/>
        <Button
            android:id="@+id/button_guardarProyecto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="-50dp"
            android:text="Guardar proyecto" />

    </RelativeLayout>

</FrameLayout>